{
    "name": "zone",
    "version": "1.0.0",
    "description": "App to help you focus with background noises and a To-Do list",
    "manifest_version": 2,
    "author": "Johannes Mohr ",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "zone"
    },
    "icons": {
        "128": "icon128.png"
    },

    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "storage",
        "contextMenus",
        "scripting",
        "activeTab",
        "background"
    ]
}
